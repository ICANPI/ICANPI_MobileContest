<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity"
    android:background="#fbfbfb">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/today_tv"
        android:layout_marginBottom="76dp"
        android:background="#ffc200">

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="17sp"
        android:text="평균"
        android:textColor="#fbfbfb"
        app:layout_constraintVertical_bias="0.056"
        android:fontFamily="@font/font"
        />
    <TextView
        android:id="@+id/average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="08:12:19"
        android:textColor="#fbfbfb"
        app:layout_constraintVertical_bias="0.089"
        android:textSize="27sp"
        android:fontFamily="@font/font"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="59dp"
        android:layout_height="61dp"
        app:layout_constraintRight_toRightOf="@id/relative_layout"
        app:layout_constraintTop_toTopOf="@id/relative_layout"
        app:layout_constraintBottom_toBottomOf="@id/relative_layout"
        app:layout_constraintVertical_bias="1.5"
        android:background="@drawable/ic_calender"
        />

    <TextView
        android:id="@+id/today_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.286"
        android:text="오늘의 수면시간"
        android:textSize="19sp"
        android:textColor="#ffc200"
        android:fontFamily="@font/font"
        />

    <TextView
        android:id="@+id/today_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/today_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="3dp"
        android:text="09:22:00"
        android:textSize="40sp"
        android:textColor="#ffc200"
        android:fontFamily="@font/font"
        />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/today_time"
        android:background="@drawable/background_timer"
        />

    <ImageView
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:background="@drawable/ic_time_measurement"
        app:layout_constraintBottom_toTopOf="@+id/bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/today_time"
        android:layout_marginTop="70dp"
        app:layout_constraintVertical_bias="0.26"/>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintBottom_toTopOf="@id/view_layout"
        app:menu="@menu/menu"
        android:background="#fbfbfb"
        android:theme="@style/Widget.BottomNavigationView"
        app:itemIconTint="@drawable/bottomnavigation_icon_color"
        >



    </com.google.android.material.bottomnavigation.BottomNavigationView>
    
    <LinearLayout
        android:id="@+id/view_layout"
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#ffc200"
        android:orientation="horizontal"
        >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#6744ff"
            android:layout_weight="1"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#6744ff"
            android:layout_weight="1"
            android:visibility="invisible"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#6744ff"
            android:layout_weight="1"
            android:visibility="invisible"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#6744ff"
            android:layout_weight="1"
            android:visibility="invisible"
            />




    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>