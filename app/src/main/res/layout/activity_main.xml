<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity"
    android:background="#fbfbfb">

    <TextView
        android:id="@+id/join_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textColor="#e2e2e2"
        tools:text="&#60;"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.169"
        app:layout_constraintHorizontal_bias="0.139"
        />

    <ImageView
        android:id="@+id/join_member_picture_plus"
        android:layout_width="109dp"
        android:layout_height="109dp"
        app:layout_constraintTop_toTopOf="@id/join_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/ic_join_picture"
        />

    <com.loopeer.shadow.ShadowView
        android:id="@+id/join_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.408"
        android:elevation="3dp"
        android:layout_marginHorizontal="50dp"
        app:cornerRadius="15dp"
        app:shadowColor="#49000000"
        android:background="@null"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="NAME"
                android:textSize="12sp"
                android:paddingVertical="13dp"
                android:paddingLeft="16dp"/>

            <EditText
                android:id="@+id/join_name_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="이름을 입력해주세요"
                android:textColorHint="#e2e2e2"
                android:background="#ffffff"
                android:paddingVertical="13dp"
                android:textSize="11sp"
                android:paddingLeft="30dp"
                />

        </LinearLayout>

    </com.loopeer.shadow.ShadowView>

    <com.loopeer.shadow.ShadowView
        android:id="@+id/join_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/join_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        android:elevation="3dp"
        android:layout_marginHorizontal="50dp"
        app:cornerRadius="15dp"
        app:shadowColor="#49000000"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textSize="12sp"
                android:paddingVertical="13dp"
                android:paddingLeft="16dp"/>

            <EditText
                android:id="@+id/join_id_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="아이디를 입력해주세요"
                android:textColorHint="#e2e2e2"
                android:background="#ffffff"
                android:paddingVertical="13dp"
                android:textSize="11sp"
                android:paddingLeft="30dp"

                />

        </LinearLayout>

    </com.loopeer.shadow.ShadowView>

    <com.loopeer.shadow.ShadowView
        android:id="@+id/join_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/join_id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        android:elevation="3dp"
        android:layout_marginHorizontal="50dp"
        app:cornerRadius="15dp"
        app:shadowColor="#49000000"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="PW"
                android:textSize="12sp"
                android:paddingVertical="13dp"
                android:paddingLeft="16dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="비밀번호를 입력해주세요"
                android:textColorHint="#e2e2e2"
                android:background="#ffffff"
                android:paddingVertical="13dp"
                android:textSize="11sp"
                android:paddingLeft="30dp"
                />

        </LinearLayout>

    </com.loopeer.shadow.ShadowView>

    <com.loopeer.shadow.ShadowView
        android:id="@+id/join_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/join_pw"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        android:elevation="3dp"
        android:layout_marginHorizontal="50dp"
        app:cornerRadius="15dp"
        app:shadowColor="#49000000"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="E-MAIL"
                android:textSize="12sp"
                android:paddingVertical="13dp"
                android:paddingLeft="16dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="이메일을 입력하세여"
                android:textColorHint="#e2e2e2"
                android:background="#ffffff"
                android:paddingVertical="13dp"
                android:textSize="11sp"
                android:paddingLeft="30dp"
                />

        </LinearLayout>

    </com.loopeer.shadow.ShadowView>

    <com.loopeer.shadow.ShadowView
        android:id="@+id/join_bt_elevation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/join_email"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:elevation="3dp"
        app:cornerRadius="15dp"
        app:shadowColor="#ffc200"
        >
        <Button
            android:id="@+id/join_bt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffc200"
            android:text="SIGN UP"
            android:textColor="#ffffff"
            android:textSize="15sp"
            />

    </com.loopeer.shadow.ShadowView>


</androidx.constraintlayout.widget.ConstraintLayout>