<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity"
    android:background="#fbfbfb">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/today_tv"
        android:layout_marginBottom="76dp"
        android:background="#ffc200">

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="17sp"
        android:text="평균"
        android:textColor="#fbfbfb"
        app:layout_constraintVertical_bias="0.056"
        />
    <TextView
        android:id="@+id/average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="08:12:19"
        android:textColor="#fbfbfb"
        app:layout_constraintVertical_bias="0.089"
        android:textSize="27sp"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="59dp"
        android:layout_height="61dp"
        app:layout_constraintRight_toRightOf="@id/relative_layout"
        app:layout_constraintTop_toTopOf="@id/relative_layout"
        app:layout_constraintBottom_toBottomOf="@id/relative_layout"
        app:layout_constraintVertical_bias="1.5"
        android:background="@drawable/ic_calender"
        />

    <TextView
        android:id="@+id/today_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.286"
        android:text="오늘의 수면시간"
        android:textSize="19sp"
        android:textColor="#ffc200"
        />

    <TextView
        android:id="@+id/today_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/today_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="3dp"
        android:text="09:22:00"
        android:textSize="40sp"
        android:textColor="#ffc200"
        />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/today_time"
        android:background="@drawable/background_timer"
        />

    <ImageView
        android:layout_width="182dp"
        android:layout_height="182dp"
        android:background="@drawable/ic_time_measurement"
        app:layout_constraintBottom_toTopOf="@+id/bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/today_time" />



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        >



    </com.google.android.material.bottomnavigation.BottomNavigationView>






</androidx.constraintlayout.widget.ConstraintLayout>