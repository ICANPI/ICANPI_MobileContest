<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FindIdActivity"
    android:background="#fbfbfb">


    <TextView
        android:id="@+id/id_find_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.256"
        android:text="아이디 찾기"
        android:textColor="#ffc200"
        android:textSize="26sp"
        android:fontFamily="@font/font"
        />

    <ImageView
        android:layout_width="8dp"
        android:layout_height="8dp"
        app:layout_constraintTop_toTopOf="@id/id_find_tv"
        app:layout_constraintBottom_toBottomOf="@id/id_find_tv"
        app:layout_constraintRight_toLeftOf="@id/id_find_tv"
        android:layout_marginRight="10dp"
        android:background="@drawable/oval"
        />


    <ImageView
        android:layout_width="8dp"
        android:layout_height="8dp"
        app:layout_constraintTop_toTopOf="@id/id_find_tv"
        app:layout_constraintBottom_toBottomOf="@id/id_find_tv"
        app:layout_constraintLeft_toRightOf="@id/id_find_tv"
        android:layout_marginLeft="10dp"
        android:background="@drawable/oval"
        />



    <com.loopeer.shadow.ShadowView
        android:id="@+id/find_id_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.405"
        android:elevation="3dp"
        android:layout_marginHorizontal="50dp"
        app:cornerRadius="15dp"
        app:shadowColor="#49000000"
        android:background="@null"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="20.5"
                android:fontFamily="@font/font"
                android:paddingVertical="13dp"
                android:paddingLeft="16dp"
                android:text="ID"
                android:textColor="#9a9a9a"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/find_id_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="79.5"
                android:hint="아이디를 입력해주세요"
                android:textColorHint="#e2e2e2"
                android:background="#ffffff"
                android:paddingVertical="13dp"
                android:paddingLeft="15dp"
                android:textColor="#9a9a9a"
                android:textSize="11sp"

                />

        </LinearLayout>

    </com.loopeer.shadow.ShadowView>

    <com.loopeer.shadow.ShadowView
        android:id="@+id/find_email_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/find_id_shadow"
        android:layout_marginTop="12dp"
        android:elevation="3dp"
        android:layout_marginHorizontal="50dp"
        app:cornerRadius="15dp"
        app:shadowColor="#49000000"
        android:background="@null"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20.5"
                android:text="E-MAIL"
                android:textSize="12sp"
                android:paddingVertical="13dp"
                android:paddingLeft="16dp"
                android:fontFamily="@font/font"
                android:textColor="#9a9a9a"
                android:layout_gravity="center_vertical"/>

            <EditText
                android:id="@+id/login_id_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="79.5"
                android:hint="아이디를 입력해주세요"
                android:textColorHint="#e2e2e2"
                android:background="#ffffff"
                android:paddingVertical="13dp"
                android:paddingLeft="15dp"
                android:textColor="#9a9a9a"
                android:textSize="11sp"
                />

        </LinearLayout>

    </com.loopeer.shadow.ShadowView>

    <com.loopeer.shadow.ShadowView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/find_email_shadow"
        app:layout_constraintLeft_toLeftOf="@id/find_email_shadow"
        app:layout_constraintRight_toRightOf="@id/find_email_shadow"
        android:layout_marginTop="20dp">
        
        <Button
            android:id="@+id/find_id_bt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_round"
            android:text="아이디 찾기"
            android:fontFamily="@font/font"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="15sp"
            />




    </com.loopeer.shadow.ShadowView>




</androidx.constraintlayout.widget.ConstraintLayout>