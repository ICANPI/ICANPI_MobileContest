<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FindIdResultActivity"
    android:background="#fbfbfb">


    <TextView
        android:id="@+id/find_id_result_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.309"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="'이예찬'님의 ID"
        android:textColor="#ffc200"
        android:textSize="23sp"
        />

    <TextView
        android:id="@+id/find_id_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/find_id_result_tv"
        app:layout_constraintLeft_toLeftOf="@id/find_id_result_tv"
        app:layout_constraintRight_toRightOf="@id/find_id_result_tv"
        android:textSize="18sp"
        android:text="asd123"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="43dp"
        android:paddingVertical="10dp"
        android:textColor="#9a9a9a"
        android:fontFamily="@font/font"
        android:background="@drawable/white_round"
        />

    <Button
        android:id="@+id/find_id_result_pw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/find_id_result"
        app:layout_constraintLeft_toLeftOf="@id/find_id_result_tv"
        app:layout_constraintRight_toRightOf="@id/find_id_result_tv"
        android:background="@drawable/login_round"
        android:layout_marginTop="66dp"
        android:text="비밀번호 찾기"
        android:fontFamily="@font/font"
        android:textColor="#ffffff"
        />
    <Button
        android:id="@+id/find_id_result_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/find_id_result_pw"
        app:layout_constraintLeft_toLeftOf="@id/find_id_result_tv"
        app:layout_constraintRight_toRightOf="@id/find_id_result_tv"
        android:background="@drawable/login_replace_round"
        android:layout_marginTop="10dp"
        android:text="비밀번호 찾기"
        android:fontFamily="@font/font"
        android:textColor="#ffffff"
        />

</androidx.constraintlayout.widget.ConstraintLayout>