<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity"
    android:background="#fbfbfb">

    <LinearLayout
        android:id="@+id/join_logo"
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:weightSum="100"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.135"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="35"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:src="@drawable/danjam_logo2"/>


    </LinearLayout>



    <EditText
        android:id="@+id/login_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/round"
        android:hint="아이디를 입력하세요"
        android:elevation="5dp"
        android:shadowColor="#49000000"
        android:textColorHint="#e2e2e2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.394"
        android:textSize="11sp"
        android:paddingVertical="13dp"
        android:paddingLeft="84dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/login_id"
        app:layout_constraintTop_toTopOf="@id/login_id"
        android:text="ID"
        android:textSize="13sp"
        android:layout_marginVertical="13dp"
        android:layout_marginLeft="16dp"
        />

    <EditText
        android:id="@+id/login_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/round"
        android:hint="비밀번호를 입력하세요"
        android:elevation="5dp"
        android:shadowColor="#49000000"
        android:textColorHint="#e2e2e2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_id"
        android:layout_marginTop="12dp"
        android:textSize="11sp"
        android:paddingVertical="13dp"
        android:paddingLeft="84dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/login_pw"
        app:layout_constraintTop_toTopOf="@id/login_pw"
        android:text="PW"
        android:textSize="13sp"
        android:layout_marginVertical="13dp"
        android:layout_marginLeft="16dp"
        />

    <Button
        android:id="@+id/login_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_pw"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/login_round"
        android:layout_marginTop="20dp"
        android:text="LOGIN"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:elevation="5dp"
        android:paddingVertical="10dp"
        />

    <Button
        android:id="@+id/join_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_bt"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/round"
        android:layout_marginTop="12dp"
        android:text="회원가입"
        android:textColor="#ffc200"
        android:textSize="15sp"
        android:elevation="5dp"
        android:paddingVertical="10dp"
        />

    <Button
        android:id="@+id/fb_bt"
        android:layout_width="31dp"
        android:layout_height="31dp"
        app:layout_constraintTop_toBottomOf="@id/join_bt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        android:background="#00ACC1"
        />

    <Button
        android:id="@+id/g_bt"
        android:layout_width="31dp"
        android:layout_height="31dp"
        app:layout_constraintTop_toTopOf="@id/fb_bt"
        app:layout_constraintRight_toLeftOf="@id/fb_bt"
        android:layout_marginRight="16dp"

        android:background="#00ACC1"

        />

    <Button
        android:id="@+id/ka_bt"
        android:layout_width="31dp"
        android:layout_height="31dp"
        app:layout_constraintTop_toTopOf="@id/fb_bt"
        app:layout_constraintLeft_toRightOf="@id/fb_bt"
        android:layout_marginLeft="16dp"
        android:background="#00ACC1"
        />

    <View
        android:id="@+id/divider"
        android:layout_width="3dp"
        android:layout_height="12dp"
        app:layout_constraintTop_toBottomOf="@id/fb_bt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="31dp"
        android:background="#9a9a9a"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="@id/divider"
        app:layout_constraintRight_toLeftOf="@id/divider"
        android:text="아이디 찾기"
        android:layout_marginRight="10dp"
        android:textSize="12sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="@id/divider"
        app:layout_constraintLeft_toRightOf="@id/divider"
        android:text="비밀번호 찾기"
        android:layout_marginLeft="10dp"
        android:textSize="12sp"
        />





</androidx.constraintlayout.widget.ConstraintLayout>