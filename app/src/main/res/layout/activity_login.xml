<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity"
    android:background="#fbfbfb"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/login_logo"
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:weightSum="100"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.135"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="35"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:src="@drawable/ic_danjam_logo2"/>

    </LinearLayout>

    <com.loopeer.shadow.ShadowView
        android:id="@+id/login_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.394"
        android:elevation="3dp"
        android:layout_marginHorizontal="50dp"
        app:cornerRadius="15dp"
        app:shadowColor="#49000000"
        android:background="@null"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="11.5"
                android:text="ID"
                android:textSize="12sp"
                android:paddingVertical="13dp"
                android:paddingLeft="16dp"
                android:fontFamily="@font/font"
                android:textColor="#000"/>

            <EditText
                android:id="@+id/login_id_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="88.5"
                android:hint="아이디를 입력해주세요"
                android:textColorHint="#e2e2e2"
                android:background="#ffffff"
                android:paddingVertical="13dp"
                android:paddingLeft="30dp"
                android:textColor="#9a9a9a"
                android:textSize="11sp"

                />

        </LinearLayout>

    </com.loopeer.shadow.ShadowView>




    <com.loopeer.shadow.ShadowView
        android:id="@+id/login_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        android:elevation="3dp"
        android:layout_marginHorizontal="50dp"
        app:cornerRadius="15dp"
        app:shadowColor="#49000000"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="11.5"
                android:text="PW"

                android:textSize="12sp"
                android:paddingVertical="13dp"
                android:paddingLeft="16dp"
                android:fontFamily="@font/font"
                android:textColor="#000"/>

            <EditText
                android:id="@+id/login_pw_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="88.5"
                android:hint="비밀번호를 입력해주세요"
                android:textColorHint="#e2e2e2"
                android:background="#ffffff"
                android:paddingVertical="13dp"
                android:paddingLeft="30dp"
                android:textSize="11sp"
                android:textColor="#9a9a9a"


                />




        </LinearLayout>

    </com.loopeer.shadow.ShadowView>

    <com.loopeer.shadow.ShadowView
        android:id="@+id/login_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_pw"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:elevation="3dp"
        app:cornerRadius="15dp"
        app:shadowColor="#ffc200"
        >
        <Button
            android:id="@+id/page_login_bt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffc200"
            android:text="LOGIN"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:fontFamily="@font/font"
            />

    </com.loopeer.shadow.ShadowView>


    <com.loopeer.shadow.ShadowView
        android:id="@+id/join_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_bt"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="12dp"
        android:elevation="3dp"
        app:cornerRadius="15dp"
        app:shadowColor="#49000000"
        >
        <Button
            android:id="@+id/signup_bt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:text="회원가입"
            android:textColor="#ffc200"
            android:textSize="15sp"

            android:fontFamily="@font/font"
            />

    </com.loopeer.shadow.ShadowView>

    <com.loopeer.shadow.ShadowView
        android:id="@+id/facebook_bt_shadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/join_bt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        android:elevation="3dp"
        app:cornerRadius="20dp"
        app:shadowColor="#3c3b5998"
        >

        <Button
            android:id="@+id/facebook_bt"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:background="@drawable/ic_facebook"
            />


    </com.loopeer.shadow.ShadowView>

    <com.loopeer.shadow.ShadowView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/facebook_bt_shadow"
        app:layout_constraintRight_toLeftOf="@id/facebook_bt_shadow"
        android:layout_marginRight="16dp"
        android:elevation="3dp"
        app:cornerRadius="20dp"
        app:shadowColor="#3c3b5998"
        >

        <Button
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:background="@drawable/ic_google_plus"
            />


    </com.loopeer.shadow.ShadowView>


    <com.loopeer.shadow.ShadowView
        android:id="@+id/kakao_shadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/facebook_bt_shadow"
        app:layout_constraintLeft_toRightOf="@id/facebook_bt_shadow"
        android:layout_marginLeft="16dp"
        android:elevation="3dp"
        app:cornerRadius="20dp"
        app:shadowColor="#3c3b5998"
        >

        <Button
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:background="@drawable/ic_kakao"
            />


    </com.loopeer.shadow.ShadowView>



    <View
        android:id="@+id/divider"
        android:layout_width="3dp"
        android:layout_height="12dp"
        app:layout_constraintTop_toBottomOf="@id/facebook_bt_shadow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="31dp"
        android:background="#9a9a9a"
        />

    <TextView
        android:id="@+id/find_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/divider"
        app:layout_constraintRight_toLeftOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="@id/divider"
        android:layout_marginRight="6dp"
        android:text="아이디 찾기"
        android:fontFamily="@font/font"
        android:textColor="#9a9a9a"
        />

    <TextView
        android:id="@+id/find_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/divider"
        app:layout_constraintLeft_toRightOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="@id/divider"
        android:layout_marginLeft="6dp"
        android:text="비밀번호 찾기"
        android:fontFamily="@font/font"
        android:textColor="#9a9a9a"
        />


</androidx.constraintlayout.widget.ConstraintLayout>