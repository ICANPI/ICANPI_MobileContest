<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.JoinActivity"
    android:background="#fbfbfb"
    >

    <TextView
        android:id="@+id/join_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textColor="#e2e2e2"
        tools:text="&lt;"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.169"
        app:layout_constraintHorizontal_bias="0.139"
        android:fontFamily="@font/font"
        />

    <ImageView
        android:id="@+id/join_member_picture_plus"
        android:layout_width="109dp"
        android:layout_height="109dp"
        app:layout_constraintTop_toTopOf="@id/join_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/ic_join_picture"
        />

    <EditText
        android:id="@+id/join_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/round"
        android:hint="이름을 입력하세요"
        android:elevation="3dp"
        android:shadowColor="#49000000"
        android:textColorHint="#e2e2e2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/join_member_picture_plus"
        android:layout_marginTop="44dp"
        android:textSize="11sp"
        android:paddingVertical="13dp"
        android:paddingLeft="84dp"
        />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/join_name"
            app:layout_constraintTop_toTopOf="@id/join_name"
            android:text="NAME"
            android:textSize="13sp"
            android:layout_marginVertical="13dp"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/font"
            android:textColor="#9a9a9a"
        />

    <EditText
        android:id="@+id/join_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/round"
        android:hint="아이디를 입력하세요"
        android:elevation="3dp"
        android:textColorHint="#e2e2e2"
        app:layout_constraintTop_toBottomOf="@id/join_name"
        app:layout_constraintLeft_toLeftOf="@id/join_name"
        app:layout_constraintRight_toRightOf="@id/join_name"
        android:layout_marginTop="12dp"
        android:textSize="11sp"
        android:paddingVertical="13dp"
        android:paddingLeft="84dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/join_id"
        app:layout_constraintTop_toTopOf="@id/join_id"
        android:text="ID"
        android:textSize="13sp"
        android:layout_marginVertical="13dp"
        android:layout_marginLeft="16dp"
        android:fontFamily="@font/font"
        android:textColor="#9a9a9a"
        />

    <EditText
        android:id="@+id/join_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/round"
        android:hint="비밀번호를 입력하세요"
        android:elevation="3dp"
        android:textColorHint="#e2e2e2"
        app:layout_constraintTop_toBottomOf="@id/join_id"
        app:layout_constraintLeft_toLeftOf="@id/join_id"
        app:layout_constraintRight_toRightOf="@id/join_id"
        android:layout_marginTop="12dp"
        android:textSize="11sp"
        android:paddingVertical="13dp"
        android:paddingLeft="84dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/join_pw"
        app:layout_constraintTop_toTopOf="@id/join_pw"
        android:text="PW"
        android:textSize="13sp"
        android:layout_marginVertical="13dp"
        android:layout_marginLeft="16dp"
        android:fontFamily="@font/font"
        android:textColor="#9a9a9a"
        />

    <EditText
        android:id="@+id/join_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/round"
        android:hint="이메일을 입력하세요"
        android:elevation="3dp"
        android:textColorHint="#e2e2e2"
        app:layout_constraintTop_toBottomOf="@id/join_pw"
        app:layout_constraintLeft_toLeftOf="@id/join_pw"
        app:layout_constraintRight_toRightOf="@id/join_pw"
        android:layout_marginTop="12dp"
        android:textSize="11sp"
        android:paddingVertical="13dp"
        android:paddingLeft="84dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/join_email"
        app:layout_constraintTop_toTopOf="@id/join_email"
        android:text="E-MAIL"
        android:textSize="13sp"
        android:layout_marginVertical="13dp"
        android:layout_marginLeft="16dp"
        android:fontFamily="@font/font"
        android:textColor="#9a9a9a"
        />

    <Button
        android:id="@+id/join_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/join_email"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/login_round"
        android:layout_marginTop="24dp"
        android:text="SIGN UP"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:elevation="3dp"
        android:paddingVertical="10dp"
        android:outlineSpotShadowColor="#ffc200"
        android:fontFamily="@font/font"
        />





</androidx.constraintlayout.widget.ConstraintLayout>