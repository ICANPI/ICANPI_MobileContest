<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChangePwResult">

    <TextView
        android:id="@+id/change_pw_result"
        app:layout_constraintVertical_bias="0.38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:text="비밀번호가\n변경되었습니다"
        android:fontFamily="@font/font"
        android:textColor="#ffc200"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/change_pw_result_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.522"
        app:layout_constraintTop_toBottomOf="@id/change_pw_result"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/login_round"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:text="로그인창으로"
        android:fontFamily="@font/font"
        />




</androidx.constraintlayout.widget.ConstraintLayout>